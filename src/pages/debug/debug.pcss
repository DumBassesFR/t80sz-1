body { opacity: 1 !important; }
#headline {
    @apply select-none flex-col rounded flex bg-purple-light h-screen pl-2 pr-1 fixed w-56 font-sans;
    #title {
        .title-para {
            @apply text-white mb-0;
        }
        .title-h1 {
            background: linear-gradient(-90deg, rgb(11, 241, 49) 0%, rgb(68, 69, 255) 25%, rgb(196, 41, 169) 50%, rgb(242, 139, 39) 75%, rgb(255, 229, 0) 100%);
            @apply m-0 mt-1 bg-clip-text text-4xl;
			color: transparent;
        }
    }
    #mdl {
        @apply w-44 lowercase bg-tp-heavy text-lg text-white pl-2 leading-6 rounded shadow;
    }
}
#playarea {
	background: green;
	overflow: hidden;
    @apply w-4/6 h-screen flex flex-col relative font-sans pl-4 pr-4 text-tp-light text-2xl left-60 rounded-lg items-center justify-center;
}
#docs-headline {
	@apply bg-purple-light flex flex-row leading-none mb-3 items-center rounded shadow;
    overflow-x: auto;
    height: 2.5em;
    line-height: 0;
    align-items: center;
    overflow-y: hidden;
	#docs-list {
    	display: flex;
    	padding-right: 0.75em;
		#mdl {
			p {
				@apply inline text-purple-light bg-yellow pl-1 pr-2 rounded ml-4;
    			font-size: 0.75em;
			}
			p:hover {
				cursor: pointer;
			}
		}
	}
}
#docs {
	overflow-y: auto;
	overflow-x: hidden;
	height: 18em;
	width: 30em;
	padding-top: 0.75em;
	padding-right: 1em;
	h1, h2, h3, p, blockquote {
		color: white;
		margin-top: 0.5em;
		margin-bottom: 0.5em;
		text-align: left;
	}
	p {
		font-size: 0.75em;
	}
	.language-js {
		@apply block bg-purple-dark leading-5;
    	font-size: 0.65em;
    	color: white;
    	padding: 5px;
	}
}
